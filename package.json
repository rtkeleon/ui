{
  "name": "@rtkwlf/ui",
  "version": "4.0.0",
  "main": "dist/ui.cjs.js",
  "module": "dist/ui.es.js",
  "types": "dist/ui.d.ts",
  "license": "MIT",
  "description": "Arctic Wolf Networks React Component Library",
  "scripts": {
    "check:types": "tsc --noEmit",
    "build:types": "tsc --emitDeclarationOnly",
    "build:ts": "tsc -p ./tsconfig.rollup.json --emitDeclarationOnly --removeComments false && api-extractor run --local",
    "gen": "plop",
    "start": "rm -rf dist/ && rm -rf types/ && rm -rf lib/ && start-storybook -p 9000 --quiet -s public -c ./",
    "storybook:build": "build-storybook -o build/storybook/static -s public",
    "storybook:docs": "build-storybook --docs -o docs -s public -c ./",
    "build": "rm -rf dist/ && rm -rf types/ && rm -rf lib/ && npm run rollup && npm run build:ts",
    "prettier:write": "prettier --write '{src,.storybook}/**/*.{js,tsx,ts}'",
    "prettier:check": "prettier --check '{src,.storybook}/**/*.{js,tsx,ts}'",
    "test": "jest",
    "rollup": "rollup -c",
    "test:coverage": "jest --coverage",
    "coverage:open": "open ./coverage/lcov-report/index.html",
    "lint": "eslint '**/*.{ts,tsx}'",
    "lint:fix": "eslint '**/*.{ts,tsx}' --fix"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.27",
    "@fortawesome/free-regular-svg-icons": "5.12.1",
    "@fortawesome/free-solid-svg-icons": "5.12.1",
    "@fortawesome/react-fontawesome": "0.1.8",
    "framer-motion": "2.9.3",
    "markdown-it": "11.0.0",
    "polished": "3.4.4",
    "react-dropzone": "11.0.2"
  },
  "peerDependencies": {
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-is": "^16.11.0",
    "react-select": "^3.1.0",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "@babel/cli": "7.13.0",
    "@babel/core": "7.13.8",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/plugin-proposal-object-rest-spread": "7.13.8",
    "@babel/plugin-transform-runtime": "7.13.9",
    "@babel/preset-env": "7.13.9",
    "@babel/preset-react": "7.12.13",
    "@babel/preset-typescript": "7.13.0",
    "@microsoft/api-extractor": "7.13.2",
    "@rollup/plugin-commonjs": "11.0.1",
    "@storybook/addon-controls": "6.1.21",
    "@storybook/addon-essentials": "6.1.21",
    "@storybook/react": "6.1.21",
    "@testing-library/react-hooks": "3.2.1",
    "@types/classnames": "2.2.9",
    "@types/enzyme": "3.10.3",
    "@types/jest": "24.0.18",
    "@types/react": "16.9.5",
    "@types/react-dom": "16.9.1",
    "@types/react-select": "3.0.14",
    "@types/react-test-renderer": "16.9.0",
    "@types/styled-components": "5.1.7",
    "@typescript-eslint/eslint-plugin": "2.6.1",
    "@typescript-eslint/parser": "2.6.1",
    "awesome-typescript-loader": "5.2.1",
    "babel-eslint": "10.0.2",
    "babel-jest": "24.8.0",
    "babel-loader": "8.0.6",
    "babel-plugin-styled-components": "1.10.0",
    "cache-loader": "3.0.1",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "eslint": "6.6.0",
    "eslint-plugin-react": "7.16.0",
    "eslint-plugin-react-hooks": "2.2.0",
    "formik": "2.1.2",
    "husky": "4.2.3",
    "install": "0.13.0",
    "jest": "24.8.0",
    "jest-enzyme": "7.1.2",
    "jest-styled-components": "7.0.0-beta.1",
    "lint-staged": "10.0.7",
    "plop": "2.6.0",
    "prop-types": "15.7.2",
    "react": "17.0.1",
    "react-docgen-typescript": "1.15.0",
    "react-docgen-typescript-loader": "3.4.0",
    "react-dom": "17.0.1",
    "react-is": "17.0.1",
    "react-select": "3.1.0",
    "react-test-renderer": "16.9.0",
    "rollup": "1.29.0",
    "rollup-plugin-typescript2": "0.30.0",
    "styled-components": "5.2.1",
    "ts-loader": "8.0.17",
    "tslib": "2.1.0",
    "typescript": "4.1.3",
    "xhr-mock": "2.5.1"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./setupTest.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.stories.tsx",
      "!src/**/*.placeholder.tsx",
      "!src/**/*.components.tsx",
      "!src/**/icons/**",
      "!src/styled/**",
      "!src/theme/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 55,
        "functions": 70,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/rtkwlf/ui.git"
  }
}
